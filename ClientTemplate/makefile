app: bin/index.js

bin/index.js: $(shell find src -type f | grep elm)
	elm make app/Main.elm --output=build/index.js

launch:
	open http://localhost:8000/index.html
	cd bin && elm reactor &

stop:
	killall elm

# clean the javascript file generated by Elm
clean:
	rm bin/index.js

# clean the elm-stuff directory	
elmclean:
	rm -r elm-stuff/