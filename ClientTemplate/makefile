app: build/index.js

build/index.js: $(shell find src -type f | grep elm) app/Main.elm
	elm make app/Main.elm --output=build/index.js

launch:
	open http://localhost:8000/index.html
	cd build && elm reactor &

stop:
	killall elm

# clean the javascript file generated by Elm
clean:
	rm build/index.js

# clean the elm-stuff directory	
elmclean:
	rm -r elm-stuff/